    box-sizing: border-box;
  }

  .btn:hover {
    background-color: #218838;
    text-decoration: none;
  }

  /* FAQ section */
  .faq-item {
    margin-bottom: 1rem;
    border-bottom: 1px solid #eee;
    padding-bottom: 1rem;
  }

  .faq-question {
    width: 100%;
    text-align: left;
    padding: 1rem 0;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    color: #2c3e50;
    display: flex;
    justify-content: space-between;
    align-items: center;
