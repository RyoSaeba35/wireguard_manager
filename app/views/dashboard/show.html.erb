<div class="dashboard-container">
  <header class="dashboard-header">
    <h1>Welcome, <%= current_user.email %></h1>
  </header>

  <section class="subscription-section">
    <h2>Your VPN Subscription</h2>
    <% if @has_subscription %>

      <div class="subscription-alert">
        <div class="alert-icon">‚úÖ</div>
        <div class="alert-content">
          <h3>Active Subscription</h3>
          <p><strong>Client:</strong> #<%= @active_subscription.name %></p>
          <p><strong>Plan:</strong> <%= @active_subscription.plan.name %></p>
          <p>
            Expires at:
            <span class="local-time-container">
              <span id="local-time-text">
                <%= @active_subscription.expires_at.in_time_zone("Etc/UTC").strftime("%d/%m/%Y at %H:%M") %>
              </span>
              <span class="utc-tooltip">
                UTC: <%= @active_subscription.expires_at.strftime("%d/%m/%Y at %H:%M") %>
              </span>
            </span>
            (local time)
          </p>
          <p class="countdown">
            <span id="countdown">Calculating remaining time...</span>
          </p>
        </div>
      </div>
      <%= link_to "View Subscription", user_subscription_path(current_user, @active_subscription), class: "btn" %>

    <% else %>
      <div class="alert alert-warning">
        <p>‚ùå You don't have an active subscription.</p>
        <%= link_to "Subscribe Now", new_user_subscription_path(current_user), class: "btn" %>
      </div>
    <% end %>

    <!-- Divider Line -->
    <div class="section-divider"></div>

    <h2>Expired Subscriptions</h2>
    <% if @expired_subscriptions.any? %>
      <% last_expired = @expired_subscriptions.last %>
      <p>
        <%# <%= last_expired.wireguard_clients.name %>
        <%# (Expired: <%= last_expired.expires_at) %>

        <div class="subscription-card">
          <h3>Subscription #<%= last_expired.name %></h3>
          <p><strong>Plan:</strong> <%= last_expired.plan.name %></p>
          <p><strong>Started:</strong> <%= last_expired.created_at.strftime("%d/%m/%Y") %></p>
          <p><strong>Expired:</strong> <%= last_expired.expires_at.strftime("%d/%m/%Y") %></p>
          <p><strong>Price:</strong> <%= number_to_currency(last_expired.price) %>/month</p>
          <p><strong>Duration:</strong>
            <% days = (last_expired.expires_at.to_date - last_expired.created_at.to_date).to_i %>
            <%= days >= 30 ? "#{days / 30} month".pluralize(days / 30) : "#{days} day".pluralize(days) %>
          </p>
        </div>

      </p>
      <% if @expired_subscriptions.size > 1 %>
        <%= link_to "View Full History", expired_subscriptions_path, class: "history-button" %>
      <% end %>
    <% else %>
      <p>No expired subscriptions.</p>
    <% end %>
  </section>

  <section class="setup-guide-section">
    <h2>Get Started with Your VPN</h2>
    <div class="alert alert-warning" style="margin-bottom: 1.5rem; padding: 1rem; background-color: #fff3cd; color: #856404; border-left: 4px solid #ffeeba;">
      <strong>Important Device Information:</strong>
      <ul style="margin-bottom: 0; padding-left: 1.2rem;">
        <li>Use <strong>only one client per device</strong> (one config file or QR code per device).</li>
        <li>Your subscription allows VPN connections on <strong>up to 3 different devices</strong> simultaneously.</li>
        <li>Each device must use its own unique configuration.</li>
      </ul>
    </div>
    <div class="setup-steps">
      <div class="step">
        <h3>1. Download WireGuard</h3>
        <ul>
          <li><a href="https://apps.apple.com/app/wireguard/id1441195209" target="_blank">iOS</a></li>
          <li><a href="https://play.google.com/store/apps/details?id=com.wireguard.android" target="_blank">Android</a></li>
          <li><a href="https://www.wireguard.com/install/" target="_blank">Windows/macOS/Linux</a></li>
        </ul>
      </div>
      <div class="step">
        <h3>2. Get Your Configuration</h3>
        <% if @has_subscription && @active_subscription %>
          <p><%= link_to "Download Config File", user_subscription_path(current_user, @active_subscription), class: "btn" %></p>
        <% else %>
          <p class="alert alert-warning" style="padding: 0.5rem; margin: 0.5rem 0;">üîí Subscribe to download your config file.</p>
        <% end %>
      </div>
      <div class="step">
        <h3>3. Need More Help?</h3>
        <p><%= link_to "View Full Setup Guide", setup_guide_path, class: "btn", style: "background-color: #3498db;" %></p>
      </div>
    </div>
  </section>

<section class="troubleshooting-section">
  <h2>Troubleshooting</h2>

  <div class="faq-item">
    <button class="faq-question">
      Connection Issues <span class="faq-icon">+</span>
    </button>
    <div class="faq-answer">
      <p><strong>Symptoms:</strong> The VPN fails to connect or has connection problems.</p>
      <ul>
        <li><strong>Check for duplicate configurations:</strong> Ensure each config file/QR code is used on only one device. If the same configuration is installed on multiple devices, remove it from all but one device.</li>
        <li>Check your internet connection.</li>
        <li>Restart the VPN client.</li>
        <li>Restart your device.</li>
        <li>Check for firewall/antivirus interference.</li>
        <li>Reinstall the VPN configuration.</li>
        <li>Update the VPN app.</li>
      </ul>
    </div>
  </div>

  <div class="faq-item">
    <button class="faq-question">
      Connection Drops <span class="faq-icon">+</span>
    </button>
    <div class="faq-answer">
      <p><strong>Symptoms:</strong> The VPN disconnects frequently or fails to connect.</p>
      <ul>
        <li>Check your internet connection.</li>
        <li>Restart the VPN client.</li>
        <li>Restart your device.</li>
        <li>Check for firewall/antivirus interference.</li>
        <li>Reinstall the VPN configuration.</li>
        <li>Update the VPN app.</li>
      </ul>
    </div>
  </div>

  <div class="faq-item">
    <button class="faq-question">
      Slow Speeds <span class="faq-icon">+</span>
    </button>
    <div class="faq-answer">
      <p><strong>Symptoms:</strong> The VPN connection is active, but browsing/downloads are slower than usual.</p>
      <ul>
        <li>Test your base internet speed.</li>
        <li>Close background applications.</li>
        <li>Check for network congestion.</li>
        <li>Restart your router.</li>
      </ul>
    </div>
  </div>

  <div class="faq-item">
    <button class="faq-question">
      Unable to Access Certain Websites <span class="faq-icon">+</span>
    </button>
    <div class="faq-answer">
      <p><strong>Symptoms:</strong> Some websites or services are blocked or unavailable while connected to the VPN.</p>
      <ul>
        <li>Clear your browser cache.</li>
        <li>Disable IPv6.</li>
        <li>Check for DNS leaks.</li>
        <li>Contact support.</li>
      </ul>
    </div>
  </div>

  <div class="faq-item">
    <button class="faq-question">
      General Tips <span class="faq-icon">+</span>
    </button>
    <div class="faq-answer">
      <p>Keep your app updated and check for announcements. If issues persist, contact support at <a href="mailto:support@FenguardVPN.com">support@fenguardvpn.com</a>.</p>
    </div>
  </div>
</section>


  <script>
    document.addEventListener("turbo:load", function() {
      // FAQ toggle logic
      document.querySelectorAll('.faq-question').forEach(button => {
        button.addEventListener('click', () => {
          const faqItem = button.parentElement;
          const answer = faqItem.querySelector('.faq-answer');
          const icon = button.querySelector('.faq-icon');
          if (answer.classList.contains('active')) {
            answer.classList.remove('active');
            icon.textContent = '+';
          } else {
            // Close all other answers
            document.querySelectorAll('.faq-answer').forEach(a => a.classList.remove('active'));
            document.querySelectorAll('.faq-icon').forEach(i => i.textContent = '+');
            // Open this answer
            answer.classList.add('active');
            icon.textContent = '-';
          }
        });
      });

      // Subscription expiration logic
      <% if @active_subscription %>
        const utcTime = "<%= @active_subscription.expires_at.iso8601 %>";
        const expiresAt = new Date(utcTime);
        const localTimeElement = document.getElementById("local-time-text");

        // Format local time as DD/MM/YYYY at HH:MM
        const day = String(expiresAt.getDate()).padStart(2, '0');
        const month = String(expiresAt.getMonth() + 1).padStart(2, '0'); // Months are 0-indexed
        const year = expiresAt.getFullYear();
        const hours = String(expiresAt.getHours()).padStart(2, '0');
        const minutes = String(expiresAt.getMinutes()).padStart(2, '0');

        const localTime = `${day}/${month}/${year} at ${hours}:${minutes}`;
        localTimeElement.textContent = localTime;

        // Update countdown
        function updateCountdown() {
          const now = new Date();
          const diff = expiresAt - now;

          if (diff <= 0) {
            document.getElementById("countdown").textContent = "Subscription expired";
            return;
          }

          const days = Math.floor(diff / (1000 * 60 * 60 * 24));
          const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

          let countdownText = [];
          if (days > 0) countdownText.push(`${days} day${days !== 1 ? 's' : ''}`);
          if (hours > 0 || days > 0) countdownText.push(`${hours} hour${hours !== 1 ? 's' : ''}`);
          countdownText.push(`${minutes} minute${minutes !== 1 ? 's' : ''}`);

          document.getElementById("countdown").textContent = `${countdownText.join(', ')} remaining`;
        }

        updateCountdown();
        setInterval(updateCountdown, 60000); // Update every minute
      <% end %>
    });
  </script>
</div>
