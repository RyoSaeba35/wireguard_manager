<div class="super-container">
  <h2>Full Expired Subscriptions History</h2>
  <% if @expired_subscriptions.any? %>
    <ul>
      <% @expired_subscriptions.each do |subscription| %>
        <li>
          <%= subscription.wireguard_client.name %> (Expired: <%= subscription.expires_at %>)
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No expired subscriptions.</p>
  <% end %>
<%= link_to "Back", :back, class: "back-button" %>
</div>

<style>
  .super-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: calc(100vh - 220px); /* Adjust based on header/footer height */
    background-color: #ecf0f1;
  }
  .history-button {
    display: inline-block;
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 5px 10px;
    text-decoration: none;
    color: #333;
    margin-top: 10px;
  }

  .history-button:hover {
    background-color: #e0e0e0;
  }

  .back-button {
    display: inline-block;
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 5px 10px;
    text-decoration: none;
    color: #333;
    margin-top: 20px;
  }
</style>
