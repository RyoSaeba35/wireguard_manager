<style>
  .super-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: calc(100vh - 220px);
    background-color: #f4f4f4;
    padding: 2rem 0;
  }
  .pricing {
    width: 100%;
    text-align: center;
  }
  .pricing h2 {
    margin-bottom: 2rem;
    font-size: 2rem;
    color: #2c3e50;
  }
  .plan {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    max-width: 300px;
    margin: 0 auto;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-top: 4px solid #27ae60;
    position: relative; /* Add this for absolute positioning of the badge */
  }

  .popular-badge {
    background-color: #e74c3c;
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    position: absolute; /* Absolute position */
    top: 10px; /* Position above the card */
    left: 50%; /* Center horizontally */
    transform: translateX(-50%); /* Perfect centering */
  }
  .plan h3 {
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }
  .plan-subtitle {
    color: #7f8c8d;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }
  .plan-price {
    font-size: 2.5rem;
    color: #e74c3c;
    margin-bottom: 1.5rem;
  }
  .plan-features {
    text-align: left;
    margin-bottom: 1.5rem;
  }
  .plan-features p {
    margin: 0.5rem 0;
  }
  /* Plan Button */
  .plan-btn {
    background-color: #27ae60;
    color: white;
    padding: 0.8rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    display: block; /* Changed from inline-block to block */
    width: 100%; /* Full width of the parent container */
    text-align: center;
    font-weight: bold;
    font-size: 1rem;
    transition: background-color 0.3s ease;
    margin: 0 auto; /* Center the button if needed */
    box-sizing: border-box; /* Include padding in the width */
  }
  .plan-btn:hover:not(:disabled) {
    background-color: #219653;
  }
  .plan-btn:disabled {
    background-color: #95a5a6;
    cursor: not-allowed;
  }
  .tooltip-icon {
    cursor: help;
    margin-left: 5px;
    font-size: 0.8em;
    color: #666;
    border-bottom: 1px dotted #666;
  }
  .plan-unavailable {
    color: #e74c3c;
    font-weight: bold;
    padding: 1rem;
    background-color: #fdecea;
    border-radius: 4px;
    margin-top: 1rem;
  }
  .plan-unavailable p {
    margin: 0.5rem 0;
  }
  .plan-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  @media (max-width: 768px) {
    .plan {
      max-width: 90%;
      padding: 1.5rem;
    }
    .plan-price {
      font-size: 2rem;
    }
  }
</style>

<div class="super-container">
  <section class="pricing">
    <h2>Choose Your Plan</h2>
    <div class="plan-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; max-width: 1200px; margin: 0 auto;">
      <% @plans.each do |plan| %>
        <div class="plan">
          <% if plan.name.include?("Month") %>
            <div class="popular-badge">Popular</div>
          <% end %>
          <h3><%= plan.name %></h3>
          <p class="plan-subtitle">Flexible, cancel anytime</p>
          <div class="plan-price">$<%= plan.price %>/<%= plan.interval %></div>
          <div class="plan-features">
            <% plan.description.split(', ').each do |feature| %>
              <% if feature.include?("Devices") %>
                <p>
                  ✅ <%= feature %>
                  <span class="tooltip-icon" title="Each device requires its own unique configuration. You can use the VPN on up to 3 different devices at the same time.">ℹ️</span>
                </p>
              <% else %>
                <p><strong>✅ <%= feature %></strong></p>
              <% end %>
            <% end %>
          </div>
          <% if plan.active && Subscription.where(plan_id: plan.id, status: 'active').count < 5 %>
            <!-- Show the subscription form or button -->
            <a href="<%= new_user_registration_path %>" class="plan-btn">Sign Up Now</a>
          <% else %>
            <!-- Show the unavailable message -->
            <div class="plan-unavailable">
              <% if !plan.active %>
                <p>This plan is currently not available.</p>
              <% else %>
                <p>This plan is currently unavailable.</p>
                <p>We limit active subscriptions to guarantee the best experience for everyone. Availability will open up again soon—stay tuned!</p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>
