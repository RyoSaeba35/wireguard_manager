<style>
  .super-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: calc(100vh - 220px); /* Adjust based on header/footer height */
    background-color: #ecf0f1;
  }
  .form-container {
    max-width: 600px;
    margin: auto 0;
    padding: 2rem;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .form-container h1 {
    color: #2c3e50;
    text-align: center;
    margin-bottom: 1.5rem;
  }
  .form-group {
    margin-bottom: 1.5rem;
  }
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: bold;
    color: #2c3e50;
  }
  .form-group input[type="text"] {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
  }
  .form-group input[type="submit"] {
    background-color: #27ae60;
    color: white;
    padding: 0.8rem 1.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    width: 100%;
    margin-top: 0.5rem;
  }
  .form-group input[type="submit"]:hover {
    background-color: #219653;
  }
</style>
<div class="super-container">
  <div class="form-container">
    <h1>New Subscription</h1>
    <%= form_with(model: [current_user, @subscription], local: true) do |form| %>
      <div class="form-group">
        <%# <%= form.label :name %>
        <%#= form.text_field :name, placeholder: "Enter a name for your WireGuard client" %>
        <%= form.hidden_field :price, value: '19.95' %>
        <%= form.hidden_field :plan, value: 'Pay As You Go' %>
        <%# No need for a name field; the token will be generated in the controller %>
      </div>
      <div class="form-group">
        <%= form.submit "Create" %>
      </div>
    <% end %>
  </div>
</div>
