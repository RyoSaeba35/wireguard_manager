<div class="super-container">
  <section class="pricing">
    <h2>Choose Your Plan</h2>

    <!-- Desktop Grid -->
    <div class="plan-grid">
      <% @plans.each do |plan| %>
        <div class="plan <%= !plan.active || Subscription.where(status: 'active').count >= Setting.max_active_subscriptions ? 'unavailable' : '' %>">
          <% if plan.name.include?("Month") %>
            <div class="popular-badge">Popular</div>
          <% end %>
          <h3><%= plan.name %></h3>
          <p class="plan-subtitle">Flexible, cancel anytime</p>
          <div class="plan-price">$<%= plan.price %>/<%= plan.interval %></div>
          <div class="plan-features">
            <% plan.description.split(', ').each do |feature| %>
              <% if feature.include?("Devices") %>
                <p>
                  ✅ <%= feature %>
                  <span class="tooltip-icon" title="Each device requires its own unique configuration. You can use the VPN on up to 3 different devices at the same time.">ℹ️</span>
                </p>
              <% else %>
                <p><strong>✅ <%= feature %></strong></p>
              <% end %>
            <% end %>
          </div>
          <% if plan.active && Subscription.where(status: 'active').count < Setting.max_active_subscriptions %>
            <%= form_with(model: [current_user, @subscription], local: false, id: "subscribe-form-#{plan.id}") do |form| %>
              <div class="form-group" style="margin: 0;">
                <%= form.hidden_field :price, value: plan.price %>
                <%= form.hidden_field :plan_id, value: plan.id %>
              </div>
              <%= form.submit "Subscribe Now", class: "plan-btn", data: { turbo: true, disable_with: "Processing..." } %>
            <% end %>
            <div id="subscribe-success-<%= plan.id %>" style="display: none; color: green; font-weight: bold; margin-top: 10px;">
              Success! Your subscription is active. We’re setting up your VPN—you’ll get an email with your config in a few minutes.
            </div>
          <% else %>
            <div class="plan-unavailable">
              <% if !plan.active && Subscription.where(status: 'active').count < Setting.max_active_subscriptions %>
                <p>This plan is currently not available.</p>
              <% else %>
                <p>Plan Sold Out</p>
                <p>We limit active subscriptions to guarantee the best experience for everyone. Availability will open up again soon—stay tuned!</p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Mobile Carousel -->
    <div class="splide" id="plan-slider">
      <div class="splide__track">
        <div class="splide__list">
          <% @plans.each do |plan| %>
            <div class="splide__slide">
              <div class="plan <%= !plan.active || Subscription.where(status: 'active').count >= Setting.max_active_subscriptions ? 'unavailable' : '' %>">
                <% if plan.name.include?("Month") %>
                  <div class="popular-badge">Popular</div>
                <% end %>
                <h3><%= plan.name %></h3>
                <p class="plan-subtitle">Flexible, cancel anytime</p>
                <div class="plan-price">$<%= plan.price %>/<%= plan.interval %></div>
                <div class="plan-features">
                  <% plan.description.split(', ').each do |feature| %>
                    <% if feature.include?("Devices") %>
                      <p>
                        ✅ <%= feature %>
                        <span class="tooltip-icon" title="Each device requires its own unique configuration. You can use the VPN on up to 3 different devices at the same time.">ℹ️</span>
                      </p>
                    <% else %>
                      <p><strong>✅ <%= feature %></strong></p>
                    <% end %>
                  <% end %>
                </div>
                <% if plan.active && Subscription.where(status: 'active').count < Setting.max_active_subscriptions %>
                  <%= form_with(model: [current_user, @subscription], local: false, id: "subscribe-form-mobile-#{plan.id}") do |form| %>
                    <div class="form-group" style="margin: 0;">
                      <%= form.hidden_field :price, value: plan.price %>
                      <%= form.hidden_field :plan_id, value: plan.id %>
                    </div>
                    <%= form.submit "Subscribe Now", class: "plan-btn", data: { turbo: true, disable_with: "Processing..." } %>
                  <% end %>
                  <div id="subscribe-success-mobile-<%= plan.id %>" style="display: none; color: green; font-weight: bold; margin-top: 10px;">
                    Success! Your subscription is active. We’re setting up your VPN—you’ll get an email with your config in a few minutes.
                  </div>
                <% else %>
                  <div class="plan-unavailable">
                    <% if !plan.active && Subscription.where(status: 'active').count < Setting.max_active_subscriptions %>
                      <p>This plan is currently not available.</p>
                    <% else %>
                      <p>Plan Sold Out</p>
                      <p>We limit active subscriptions to guarantee the best experience for everyone. Availability will open up again soon—stay tuned!</p>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>

<style>
  /* Super Container */
  .super-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: calc(100vh - 220px);
    background-color: #f4f4f4;
    padding: 2rem 0;
    box-sizing: border-box;
  }
  /* Pricing Section */
  .pricing {
    width: 100%;
    text-align: center;
    padding: 1rem;
    padding-top: 0;
    box-sizing: border-box;
  }
  .pricing h2 {
    margin-bottom: 2rem;
    font-size: 2rem;
    color: #2c3e50;
  }
  /* Plan Grid */
  .plan-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }
  /* Plan Card */
  .plan {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-top: 4px solid #27ae60;
    position: relative;
    transition: filter 0.3s ease;
  }
  .plan.unavailable {
    position: relative;
  }
  .plan.unavailable::after {
    content: "";
    position: absolute;
    top: 10px;
    right: 10px;
    bottom: 10px;
    left: 10px;
    background: linear-gradient(
      to bottom right,
      transparent calc(50% - 2px),
      #e74c3c calc(50% - 4px),
      #e74c3c calc(50% + 4px),
      transparent calc(50% + 2px)
    );
    pointer-events: none;
    z-index: 5;
    border-radius: 4px;
  }
  /* Popular Badge */
  .popular-badge {
    background-color: #e74c3c;
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
  }
  /* Plan Title and Subtitle */
  .plan h3 {
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }
  .plan-subtitle {
    color: #7f8c8d;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }
  /* Plan Price */
  .plan-price {
    font-size: 2.5rem;
    color: #e74c3c;
    margin-bottom: 1.5rem;
  }
  /* Plan Features */
  .plan-features {
    text-align: left;
    margin-bottom: 1.5rem;
  }
  .plan-features p {
    margin: 0.5rem 0;
  }
  /* Tooltip Icon */
  .tooltip-icon {
    cursor: help;
    margin-left: 5px;
    font-size: 0.8em;
    color: #666;
    border-bottom: 1px dotted #666;
  }
  /* Plan Button */
  .plan-btn {
    background-color: #27ae60;
    color: white;
    padding: 0.8rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    display: block;
    width: 100%;
    text-align: center;
    font-weight: bold;
    font-size: 1rem;
    transition: background-color 0.3s ease;
    margin: 0 auto;
    box-sizing: border-box;
  }
  .plan-btn:hover:not(:disabled) {
    background-color: #219653;
  }
  .plan-btn:disabled {
    background-color: #95a5a6;
    cursor: not-allowed;
  }
  /* Unavailable Plan Message */
  .plan-unavailable {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(255, 255, 255, 0.8);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    text-align: center;
    border-radius: 8px;
    z-index: 10;
    color: #e74c3c;
    font-weight: bold;
    font-size: 1.1rem;
  }
  .plan-unavailable p:first-child {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }
  .plan-unavailable p:last-child {
    font-size: 0.9rem;
    color: #4d4c4cff;
    max-width: 80%;
    margin-top: 0;
  }
  /* Mobile styles */
  @media (max-width: 768px) {
    .super-container {
      padding: 1rem 0;
    }
    .plan {
      max-width: 90%;
      padding: 1.5rem;
      margin: 0 auto;
    }
    .plan-price {
      font-size: 2rem;
    }
    /* Hide grid on mobile */
    .plan-grid {
      display: none;
    }
    /* Show carousel on mobile */
    #plan-slider {
      display: block;
      margin: 0 auto;
      max-width: 100%;
    }
    .splide__slide {
      padding: 0 0.5rem;
    }
    /* Style for arrows */
    .splide__arrow {
      background: rgba(0, 0, 0, 0.3) !important;
      width: 2.5rem !important;
      height: 2.5rem !important;
      opacity: 0.7;
    }
    .splide__arrow:hover {
      opacity: 1;
    }
    .splide__arrow--prev {
      left: -0.5rem !important;
    }
    .splide__arrow--next {
      right: -0.5rem !important;
    }
    /* Style for pagination */
    .splide__pagination {
      bottom: -2rem !important;
    }
    .splide__pagination__page {
      width: 0.8rem !important;
      height: 0.8rem !important;
      background: #ccc !important;
      opacity: 0.7;
    }
    .splide__pagination__page.is-active {
      background: #27ae60 !important;
      opacity: 1;
    }
  }
  @media (min-width: 769px) {
    #plan-slider {
      display: none;
    }
    .plan-grid {
      display: grid;
    }
  }
</style>

<script>
  document.addEventListener('turbo:load', function() {
    if (window.innerWidth <= 768) {
      new Splide('#plan-slider', {
        type: 'slide',
        perPage: 1,
        gap: '1rem',
        padding: '1rem',
        arrows: true,
        pagination: false,
      }).mount();
    }
  });
</script>
