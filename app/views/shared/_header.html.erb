<header class="header">
  <%= link_to "IronCryptVPN", root_path, class: "logo" %>
  <nav class="nav-links">
    <% if user_signed_in? %>
      <%= link_to "Dashboard", root_path %>
      <%= link_to "Edit Profile", profile_path %>
      <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "logout-btn" %>
    <% else %>
      <a href="<%= new_user_session_path %>" class="login-btn">Log In</a>
    <% end %>
  </nav>
</header>

<style>
  .header {
    background-color: #2c3e50;
    color: white;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: white;
    text-decoration: none;
  }

  .logo:hover {
    text-decoration: none;
    opacity: 0.9;
  }
  .nav-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  .nav-links a,
  .nav-links button {
    color: white;
    text-decoration: none;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 0.95rem;
    padding: 0.5rem;
    border-radius: 4px;
    transition: background-color 0.2s;
  }
  .nav-links a:hover,
  .nav-links button:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }
  .nav-links .logout-btn {
    color: #e74c3c;
  }
  .nav-links .logout-btn:hover {
    background-color: rgba(231, 76, 60, 0.2);
  }
  .login-btn {
    color: white;
    text-decoration: none;
    padding: 0.5rem;
    border-radius: 4px;
    transition: background-color 0.2s;
  }
  .login-btn:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }
</style>
