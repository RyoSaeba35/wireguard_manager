    margin-top: auto;
  }
  .footer-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }
  .footer-links a {
    color: white;
    text-decoration: none;
  }
  .footer-links a:hover {
    text-decoration: underline;
  }
